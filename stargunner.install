post_install () {
	echo "Stargunner is now installed. If it is running slow for you," 
	echo "edit the CPU parameters in ~/.stargunner/dosbox.conf"
	echo "Use Alt-Enter as usual to enter fullscreen mode."
}

post_remove() {
	echo "Your ~/.stargunner folder still exists. "
	echo "If you want to delete it, please do so manually."
}
